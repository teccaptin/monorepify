{
  "name": "monorepify",
  "version": "1.0.0",
  "description": "A boilerplate for Full stack VueJS and nestJS and other typescript frameworks too. But i believe you can add JS frameworks too (with little modification)",
  "private": true,
  "author": {
    "name": "Em Ji Madhu",
    "email": "emjimadhu@gmail.com"
  },
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:all:start": "concurrently --names \"SHARED,CLIENT,SERVER\" -c \"yellow.bold,yellow.bold\" \"yarn dev:shared:start\" \"yarn dev:client:start\" \"yarn dev:server:start\"",
    "dev:all:build": "yarn dev:shared:build && yarn dev:client:build && yarn dev:server:build",
    "dev:client:start": "cd apps/client && yarn serve",
    "dev:client:build": "cd apps/client && yarn build",
    "dev:client:lint": "cd apps/client && yarn lint",
    "test:client:unit": "cd apps/client && yarn test:unit",
    "test:client:e2e": "cd apps/client && yarn test:e2e",
    "dev:server:build": "cd apps/server && yarn build",
    "dev:server:start": "cd apps/server && yarn start:dev",
    "dev:server:lint": "cd apps/server && yarn lint",
    "prod:server:start": "cd apps/server && yarn start:prod",
    "dev:shared:start": "cd libs/shared && yarn build:watch",
    "dev:shared:build": "cd libs/shared && rimraf dist && yarn build",
    "dev-shared:client:start": "concurrently --names \"SHARED,CLIENT\" -c \"yellow.bold,yellow.bold\" \"yarn dev:shared:start\" \"yarn dev:client:start\"",
    "dev-shared:server:start": "concurrently --names \"SHARED,SERVER\" -c \"yellow.bold,yellow.bold\" \"yarn dev:shared:start\" \"yarn dev:server:start\"",
    "dev-shared:client:build": "yarn dev:shared:build && arn dev:client:build",
    "dev-shared:server:build": "yarn dev:shared:build && arn dev:server:build",
    "utils:remove-node-modules": "rimraf node_modules apps/client/node_modules apps/server/node_modules libs/shared/node_modules"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "12.12.22",
    "@vue/cli-plugin-typescript": "^4.1.2",
    "concurrently": "^5.0.2",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@monorepify/shared": "1.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.21.0"
  }
}
