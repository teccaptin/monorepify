{
  "name": "monorepify",
  "version": "1.0.0",
  "description": "A boilerplate for Full stack VueJS and nestJS and other typescript frameworks too. But i believe you can add JS frameworks too (with little modification)",
  "private": true,
  "author": {
    "name": "Em Ji Madhu",
    "email": "emjimadhu@gmail.com"
  },
  "license": "MIT"
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:start": "concurrently --names \"CLIENT,SERVER\" -c \"yellow.bold,yellow.bold\" \"yarn dev:client:start\" \"yarn dev:server:start\" ",
    "dev:client:start": "cd apps/client && yarn serve",
    "dev:client:build": "cd apps/client && yarn build",
    "dev:client:lint": "cd apps/client && yarn lint",
    "test:client:unit": "cd apps/client && yarn test:unit",
    "test:client:e2e": "cd apps/client && yarn test:e2e",
    "dev:server:build": "cd apps/server && yarn build",
    "dev:server:start": "cd apps/server && yarn start:dev",
    "dev:server:lint": "cd apps/server && yarn lint",
    "prod:server:start": "cd apps/server && yarn start:prod"
  },
  "devDependencies": {
    "concurrently": "^5.0.2"
  }
}
